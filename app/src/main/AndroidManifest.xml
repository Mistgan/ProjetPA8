<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.efrei.coursorama.projetpa8">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Accueil"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <category android:name="android.intent.category.Accueil" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Drawer"
            android:label="@string/title_activity_drawer"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <category android:name="android.intent.category.Drawer" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Apropos"
            android:parentActivityName=".Accueil" />
        <activity
            android:name=".Rayons"
            android:parentActivityName=".Accueil"/>
    </application>

</manifest>